{
  "name": "t2cr-to-ipfs",
  "version": "0.1.0",
  "description": "Pulls token information from the kleros t2cr and publishes them to ipfs following uniswap/token-lists schema.",
  "main": "dist",
  "repository": "git+https://github.com/kleros/t2cr-to-ipfs",
  "author": "Kleros",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "ts-node-dev src/index.ts",
    "build": "rimraf dist && tsc",
    "production": "yarn build && node dist",
    "test": "jest",
    "lint:secrets": "secretlint \"**/*\"",
    "lint": "eslint 'src/**/*.{js,ts}' --fix && tsc --noEmit && yarn lint:secrets",
    "release": "standard-version"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@secretlint/secretlint-rule-preset-recommend": "^2.1.0",
    "@types/jest": "^26.0.4",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "secretlint": "^2.1.0",
    "standard-version": "^8.0.1",
    "ts-jest": "^26.1.2",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@types/lodash": "^4.14.157",
    "@types/node": "^14.0.23",
    "@uniswap/token-lists": "^1.0.0-beta.5",
    "ajv": "^6.12.3",
    "dotenv": "^8.2.0",
    "ethers": "^5.0.5",
    "lodash": "^4.17.19"
  }
}
