{
  "name": "t2cr-to-ipfs",
  "version": "0.1.0",
  "description": "Pulls token information from the kleros t2cr and publishes them to ipfs following uniswap/token-lists schema.",
  "main": "dist",
  "repository": "git+https://github.com/kleros/t2cr-to-ipfs",
  "author": "Kleros",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint 'src/**/*.{js,ts}' --fix && tsc --noEmit",
    "release": "standard-version"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.1",
    "typescript": "^3.9.6"
  }
}
